<UserControl x:Class="Accounting101.WPF.Views.Read.AccountsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:read="clr-namespace:Accounting101.WPF.ViewModels.Read"
             mc:Ignorable="d"
             Background="Transparent"
             d:Background="Teal"
             d:DataContext="{d:DesignInstance read:AccountsViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid
            LoadingRow="AccountListLoadingRow"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            AutoGenerateColumns="True"
            AutoGeneratingColumn="DataGridAutoGeneratingColumn"
            AutoGeneratedColumns="DataGridAutoGeneratedColumns"
            Background="Transparent"
            Foreground="{StaticResource MahApps.Brushes.IdealForeground}"
            ItemsSource="{Binding Source}" />
    </Grid>
</UserControl>
<UserControl x:Class="Accounting101.WPF.Controls.HeaderLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Accounting101.WPF.Controls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance controls:HeaderLabel}"
             d:Background="Teal"
             Background="Transparent"
             d:DesignHeight="40" d:DesignWidth="800">
    <Label
        HorizontalAlignment="Center"
        FontSize="20"
        FontWeight="Bold"
        Content="{Binding LabelContent}"
        Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
        d:Content="{Binding LabelContent}" />
</UserControl>